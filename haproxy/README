                 {username: 'haproxy_exporter', password: 'WjA+bU_E2PdA5w9.F5n3CEH,8WG-S3k7', comment: 'haproxy_exporter'},
                 {username: 'user', password: 'F2R2T_UgE.LtB-3BEHcQxq98wfr2P-GM', comment: 'default user'}]
      None    : []

  haproxy_stats_defaults_state
